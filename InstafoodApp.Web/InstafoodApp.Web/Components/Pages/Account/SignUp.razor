@page "/signup"

@inject NavigationManager _nav
@inject IUserService _userService
@rendermode InteractiveServer
<PageTitle>Sign Up</PageTitle>

<div class="mt-5 px-2 w-100">
    <div class="col-lg-4 offset-lg-4 pt-2 pb-2 border rounded">
        <EditForm Model="@signupModel" OnValidSubmit="SignupAuthenticate" FormName="SignUpForm">
            <DataAnnotationsValidator />
            <div class="mb-1 text-center flex-column">
                <img src="/images/profilelogin.png" style="max-height:10rem" />
                <h3>SignUp</h3>
            </div>
            <div class="mb-3 mx-2">
                <label class="ms-2">Name</label>
                <InputText @bind-Value="signupModel.Name" class="form-control" placeholder="Enter the Name" />
                <ValidationMessage For="()=>signupModel.Name" />
            </div>
            <div class="mb-3 mx-2">
                <label class="ms-2">Email</label>
                <InputText @bind-Value="signupModel.Email" class="form-control" placeholder="Enter the Email" />
                <ValidationMessage For="()=>signupModel.Email" />
            </div>
            <div class="mb-3 mx-2">
                <label class="ms-2">Password</label>
                <InputText type="password" @bind-Value="signupModel.Password" class="form-control" placeholder="Enter the Password" />
                <ValidationMessage For="()=>signupModel.Password" />
            </div>
            @if (IsAdmin)
            {
                <div class="mb-2 mx-2" hi>
                    <label class="ms-2">Access Code</label>
                    <InputText @bind-Value="signupModel.AdminCode" class="form-control" placeholder="Enter the Admin Access Code" />
                </div>
            }
            <div class="mx-2 form-check">
                <InputCheckbox @bind-Value="IsAdmin" class="form-check-input" />
                <label class="form-check-label text-primary fs-6" for="flexCheckChecked">
                    Is Administrator
                </label>
            </div>
            <div class="mb-3 text-center">
                <span class="text-danger">@errorMessage</span>
            </div>
            <div class="mb-3 mt-3 d-grid gap-2">
                <button type="submit" class="mx-2 btn btn-primary">Login</button>
            </div>
        </EditForm>
        <div class="text-center">
            Already have account? <a class="text-primary" href="/login">login</a>
        </div>
    </div>
</div>

@code {
    public UserDTO signupModel { get; set; } = new();
    public bool IsAdmin { get; set; } = false;
    public string? errorMessage;


    private async Task SignupAuthenticate()
    {
        // errorMessage = "click ";
        LoginResponse response = await _userService.SignUp(signupModel);
        if (response == null)
        {
            errorMessage = "Already Have Account on this Email";
            return;
        }
        _nav.NavigateTo("/login");
    }
}

